.title {
  font-size: 48rpx;
  font-family: PingFangSC-Regular;
  color: rgba(89, 108, 142, 1);
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container {
  margin-top: 40rpx;
  width: 100%;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 10px 0px rgba(220, 213, 199, 0.5)
}

.question-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 32rpx;
  border-bottom: 3rpx solid #f3f3f3;
  padding-bottom: 32rpx;
}

.item-left {
  height: 90rpx;
  margin: auto 0rpx;
  padding-right: 15rpx;
  border-right: 3rpx dashed #7b8b6f;
}

.index {
  background-color: #e0e5df;
  color: #7b8b6f;
  width: 60rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx bold;
}

.item-right {
  display: flex;
  flex-direction: column;
  margin-left: 14rpx;
}

.item-right text:first-child {
  color: #7b8b6f;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.item-right text:last-child {
  color: #333333;
  font-size: 30rpx;
}